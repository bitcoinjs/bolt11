    "test": "npm run standard && npm run coverage",
    "unit": "tape test/*.js"
  },
  "devDependencies": {
    "nyc": "^6.4.0",
    "standard": "*",
    "tape": "^4.8.0"
  }
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bitcoinjs/bolt11.git"
  },
